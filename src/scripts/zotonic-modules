        SITE_PATH = os.path.join(os.environ['ZOTONIC'], 'priv', 'sites', SITE)

        def create_testsite():
            if not os.path.exists():
                print '***CREATING ZMM TEST SITE: %s' % SITE
                cmd = os.path.join(os.environ['ZOTONIC_BIN'], 'zotonic') + ' addsite %s' % SITE
                return subprocess.Popen(cmd, shell=True, stdout=subprocess.PIPE).stdout.read()
            return True

        def delete_testsite():
            print '***DELETING ZMM TEST SITE: %s' % SITE
            cmd = os.path.join(os.environ['ZOTONIC_BIN'], 'zotonic') + ' disablesite %s' % SITE
            subprocess.Popen(cmd, shell=True, stdout=subprocess.PIPE).stdout.read()
            if os.path.exists(SITE_APTH): return shutil.rmtree(SITE_PATH)
            return True
            
        # run unit tests
        unittest.main(argv=[sys.argv[0]], verbosity=2)

    else:
        main()
